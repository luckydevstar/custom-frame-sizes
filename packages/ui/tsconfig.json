{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		// rootDir removed to allow imports from other packages in monorepo
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"],
			"@/components/*": ["./components/*"],
			"@/components/ui/*": ["./components/ui/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"],
	"references": [
		{ "path": "../core" },
		{ "path": "../types" },
		{ "path": "../config" }
	]
}

