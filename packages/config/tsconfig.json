{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    // rootDir removed to allow imports from other packages in monorepo
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false // Required for project references - must emit declaration files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"],
  "references": [
    { "path": "../data" }
  ]
}

