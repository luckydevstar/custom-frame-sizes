# Store A Environment Variables
# Copy this file to .env.local and fill in your values

# Site Configuration
SITE_ID=store-a
NEXT_PUBLIC_SITE_ID=store-a

# Shopify Storefront API (Public - safe for client-side)
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=shpf_...
NEXT_PUBLIC_SHOPIFY_API_VERSION=2024-01

# Shopify Admin API (Secret - server-side only)
SHOPIFY_API_KEY=shpa_...
SHOPIFY_API_SECRET_KEY=shpss_...
SHOPIFY_ADMIN_API_ACCESS_TOKEN=shpat_...

# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN=https://example.sentry.io/...
SENTRY_DSN=https://example.sentry.io/...
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=store-a@0.1.0

# API Endpoints
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Node Environment
NODE_ENV=development
