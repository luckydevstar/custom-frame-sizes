# Store A Environment Variables
# Copy this file to .env.local and fill in your values

# Site Configuration
NEXT_PUBLIC_SITE_ID=store-a
SITE_ID=store-a

# Shopify Storefront API (Public - Safe for client-side)
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your-storefront-access-token
NEXT_PUBLIC_SHOPIFY_API_VERSION=2024-01

# API Endpoints
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Shopify Admin API (Server-side only - Keep secret!)
SHOPIFY_API_KEY=your-admin-api-key
SHOPIFY_API_SECRET_KEY=your-admin-api-secret-key
SHOPIFY_ADMIN_API_ACCESS_TOKEN=your-admin-api-access-token

# Sentry Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_RELEASE=
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=

# Node Environment
NODE_ENV=development