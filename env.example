# FrameCraft Monorepo Environment Variables
# Copy this file to .env.local and fill in your values
#
# IMPORTANT: Never commit .env.local or any file containing actual secrets

# ============================================================================
# General Configuration
# ============================================================================

# Node environment (development, staging, production)
NODE_ENV=development

# Site identifier for multi-tenant database queries
SITE_ID=default

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/framecraft?sslmode=require

# ============================================================================
# Shopify Configuration (Per-Store)
# ============================================================================

# Default store domain (e.g., "my-store.myshopify.com")
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com

# Shopify API Key (for Admin API authentication)
SHOPIFY_API_KEY=your-api-key

# Shopify API Secret (for Admin API authentication)
# NEVER expose this on the client side
SHOPIFY_API_SECRET=your-api-secret

# Shopify Admin API Access Token
# NEVER expose this on the client side
SHOPIFY_ADMIN_API_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Shopify Storefront API Access Token (public, safe for client-side)
NEXT_PUBLIC_SHOPIFY_STOREFRONT_TOKEN=your-storefront-access-token

# Shopify API Version (e.g., "2024-01")
SHOPIFY_API_VERSION=2024-01

# ============================================================================
# Multi-Store Configuration
# ============================================================================

# Store A Configuration
# STORE_A_DOMAIN=store-a.myshopify.com
# STORE_A_STOREFRONT_TOKEN=token-for-store-a
# STORE_A_ADMIN_TOKEN=admin-token-for-store-a

# Store B Configuration
# STORE_B_DOMAIN=store-b.myshopify.com
# STORE_B_STOREFRONT_TOKEN=token-for-store-b
# STORE_B_ADMIN_TOKEN=admin-token-for-store-b

# ============================================================================
# Error Monitoring (Sentry)
# ============================================================================

# Sentry DSN (Data Source Name) for error reporting
# Get this from your Sentry project settings
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Sentry Auth Token (for source map uploads, CI/CD only)
# SENTRY_AUTH_TOKEN=sntrys_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Sentry Organization slug
# SENTRY_ORG=your-org

# Sentry Project slug
# SENTRY_PROJECT=framecraft

# ============================================================================
# Vercel Configuration (if deploying to Vercel)
# ============================================================================

# Vercel URL (automatically set by Vercel)
# VERCEL_URL=your-app.vercel.app

# ============================================================================
# Feature Flags
# ============================================================================

# Enable debug logging for Shopify API requests
ENABLE_SHOPIFY_LOGGING=false

# Enable rate limit bypass for development
# DISABLE_RATE_LIMITING=false

# ============================================================================
# External Services
# ============================================================================

# Object Storage (e.g., AWS S3, Cloudflare R2)
# STORAGE_BUCKET_NAME=framecraft-uploads
# STORAGE_ACCESS_KEY=your-access-key
# STORAGE_SECRET_KEY=your-secret-key
# STORAGE_ENDPOINT=https://your-endpoint.r2.cloudflarestorage.com

# Image Processing Service (if using external upscaling)
# IMAGE_SERVICE_API_KEY=your-image-service-api-key

# ============================================================================
# Development Tools
# ============================================================================

# Turborepo Remote Caching (optional)
# TURBO_TOKEN=your-turbo-token
# TURBO_TEAM=your-team

# ============================================================================
# Client-Side Public Variables (NEXT_PUBLIC_ prefix)
# ============================================================================

# These variables are exposed to the browser - do NOT include secrets

# Public site URL
# NEXT_PUBLIC_SITE_URL=https://your-site.com

# Public API URL (if different from site)
# NEXT_PUBLIC_API_URL=https://api.your-site.com

# Sentry DSN (public key is safe to expose)
# NEXT_PUBLIC_SENTRY_DSN=https://publicKey@sentry.io/project

# ============================================================================
# Asset source: Local vs Cloudflare R2 (see docs/ASSET_SOURCE.md)
# ============================================================================
# Set in apps/store-a/.env.local. Leave empty for local assets; set to R2 URLs for CDN.
#
# Shared assets (frames, mats, comic, diploma, etc.)
# NEXT_PUBLIC_CDN_SHARED_URL=https://pub-69a10dc9071244a289ce236ece9aba93.r2.dev
#
# Store-A assets (assets/ directory only)
# NEXT_PUBLIC_CDN_STORE_A_URL=https://pub-90cb5b0e26db4cc1b1ece8a4852edfc8.r2.dev

